@page
@model CambarFotoModel
@{
    ViewData["Title"] = "Cambiar foto de Usuario";
}

<h3>@ViewData["Title"]</h3>

<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.rutaFoto">Foto de Usuario Actual</label>
                <img width="400px" src="~/fotosUsuarios/@Model.Input.rutaFoto" class="img-thumbnail" />
            </div>
            <div class="form-floating">
                <label asp-for="Input.rutaFoto" class="form-label">Subir nueva Foto usuario</label><br /><br />
                <input asp-for="Input.rutaFoto" type="file" name="file" />
                <span asp-validation-for="Input.rutaFoto" class="text-danger"></span>
            </div>
            <br />
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Cambiar foto</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
