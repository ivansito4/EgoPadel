@page
@model CambarFotoModel
@{
    ViewData["Title"] = "Mi Perfil";
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-floating">
                <label asp-for="Input.rutaFoto" class="form-label">Foto usuario</label>
                <input asp-for="Input.rutaFoto" type="file" name="file" />
                <span asp-validation-for="Input.rutaFoto" class="text-danger"></span>
            </div>
            
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Cambiar foto</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
