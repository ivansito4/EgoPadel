@page
@model IndexModel
@{
    ViewData["Title"] = "Mi Perfil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.RutaImagen">Foto de Usuario</label>
                <img src="~/fotosUsuarios/@Model.Input.RutaImagen" class="img-thumbnail" />
            </div>
            @*<div class="form-floating">
            <input asp-for="Input.Puntos" class="form-control" disabled/>
            <label asp-for="Input.Puntos" class="form-label">Puntos Totales</label>
            <span asp-validation-for="Input.Puntos" class="text-danger"></span>
            </div>*@
            <div>
                <br />
                <h1>Mis puntos : @Model.Input.Puntos</h1>
                <br />
            </div>
            <div class="py-2">
                <input asp-for="Input.Login" placeholder="Nombre de Usuario" class="form-control" autocomplete="Login" aria-required="true" />
                <span asp-validation-for="Input.Login" class="text-danger"></span>
            </div>
            
            <div class="py-2">
                <input asp-for="Input.Nombre" placeholder="Nombre" class="form-control" autocomplete="nombre" aria-required="true" />
                <span asp-validation-for="Input.Nombre" class="text-danger"></span>
            </div>
            <div class="py-2">
                <input asp-for="Input.Apellidos" placeholder="Apellidos" class="form-control" autocomplete="apellidos" aria-required="true" />
                <span asp-validation-for="Input.Apellidos" class="text-danger"></span>
            </div>
            <div class="py-2">
                <input asp-for="Input.Email" placeholder="Email" class="form-control" type="email" autocomplete="Email" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            
            <div class="py-2">
                <input asp-for="Input.PhoneNumber" placeholder="Teléfono" class="form-control" autocomplete="PhoneNumber" aria-required="true" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary form-control">Actualizar mi perfil</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
