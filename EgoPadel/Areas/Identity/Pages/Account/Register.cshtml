@page
@using EgoPadel;
@model RegisterModel


<link href="~/css/loginRegister.css" rel="stylesheet" />
<div class="py-4" style="height:750px;>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row form-group">
        <div class="col-8 offset-2">
            <div class="card" style="height:700px; top:140px; left:33%;">
                <div class="card-body" >
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <h3 class="col-12 text-success text-center py-4">
                            @if (User.IsInRole(WC.AdminRol))
                            {
                                <strong>Registrar un Usuario Administrador</strong>
                            }
                            else
                            {
                                <strong>Registrarse</strong>

                            }
                        </h3>
                        <hr />
                        <div class="py-2">
                            <input asp-for="Input.Nombre" placeholder="Nombre" class="form-control" autocomplete="nombre" aria-required="true" />
                            <span asp-validation-for="Input.Nombre" class="text-danger"></span>
                        </div>
                        <div class="py-2">
                            <input asp-for="Input.Apellidos" placeholder="Apellidos" class="form-control" autocomplete="apellidos" aria-required="true" />
                            <span asp-validation-for="Input.Apellidos" class="text-danger"></span>
                        </div>
                        <div class="py-2">
                            <input asp-for="Input.Email" placeholder="Email" class="form-control" type="email" autocomplete="Email" aria-required="true" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="py-2">
                            <input asp-for="Input.Login" placeholder="Nombre de Usuario" class="form-control" autocomplete="Login" aria-required="true" />
                            <span asp-validation-for="Input.Login" class="text-danger"></span>
                        </div>
                        <div class="py-2">
                            <input asp-for="Input.PhoneNumber" placeholder="Teléfono" class="form-control" autocomplete="PhoneNumber" aria-required="true" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-row row py-2">
                            <div class="col-6">
                                <input asp-for="Input.Password" placeholder="Contraseña" type="password" class="form-control" autocomplete="new-password" aria-required="true" />
                            </div>
                            <div class="col-6">
                                <input asp-for="Input.ConfirmPassword" placeholder="Confirmar Contraseña" type="password" class="form-control" autocomplete="new-password" aria-required="true" />
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="py-2">
                            @if (User.IsInRole(WC.AdminRol))
                            {
                                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-warning form-control">Registrar Usuario Administrador</button>
                            }
                            else
                            {
                                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary form-control">Registrar</button>
                            }

                        </div>
                    </form>

                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <p>
                            Al hacer click en <em>Registrar</em> estás de acuerdo con los terminos <a href="https://youtu.be/wT0EXirvFIo" target="_blank">Términos del servicio</a>
                        </p>
                        <div class="row">
                            <p>
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                    @if (provider.Name.ToLower().Contains("facebook"))
                                    {
                                        <button type="submit" class="btn btn-block facebook-btn form-control"
                                                name="provider" value="@provider.Name"
                                                title="Registrarse mediante su cuenta de @provider.DisplayName">
                                            <i class="fab fa-facebook-square"></i> @provider.DisplayName
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Registrarse usando su cuenta de @provider.DisplayName">@provider.DisplayName</button>
                                    }

                                }
                            </p>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
