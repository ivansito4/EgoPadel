@model EgoPadel.Models.ViewModels.PedidoVM

@{
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crear</h1>

<h4>Pedido</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Crear">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Pedido.UsuarioId" class="control-label"></label>
                <select asp-for="Pedido.UsuarioId" class="form-select" asp-items="Model.UsuarioLista">
                    <option disabled selected>--Seleccione un Usuario</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Pedido.FechaOrden" class="control-label"></label>
                <input asp-for="Pedido.FechaOrden" class="form-control" />
                <span asp-validation-for="Pedido.FechaOrden" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pedido.Telefono" class="control-label"></label>
                <input asp-for="Pedido.Telefono" class="form-control" />
                <span asp-validation-for="Pedido.Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pedido.NombreCompleto" class="control-label"></label>
                <input asp-for="Pedido.NombreCompleto" class="form-control" />
                <span asp-validation-for="Pedido.NombreCompleto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pedido.Email" class="control-label"></label>
                <input asp-for="Pedido.Email" class="form-control" />
                <span asp-validation-for="Pedido.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit"  value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");

    <script>

    $(document).ready(function () {
        $('.summernote').summernote({
            height: 250
        });
    });
    </script>
    }
}
