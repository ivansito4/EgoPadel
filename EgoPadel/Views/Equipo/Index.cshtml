@model IEnumerable<EgoPadel.Models.Equipo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <script type="text/javascript" src="~/js/ClasEquipos.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fjalla+One&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
    <script type="text/javascript" src="https://code.jquery.com/jquery-1.7.2.min.js"></script>

</head>
<h1>Clasificación Por Equipos</h1>
<table class="table bg-light table-hover table-striped table-bordered " style="position: relative; left: 100px; ">
    <thead class="text-center">
        <tr>
            <th>
                Escudo
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.Puntos)
            </th>
            <th>Información</th>
        </tr>
    </thead>
    <tbody class="text-center">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@WC.FotoEscudo@item.FotoEscudo" width="50"/>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Puntos)
                </td>
                    <td class="text-center">

                    <a class="w-50 btn btn-lg btn-success form-control" asp-action="Detalle" asp-route-id="@item.Id">Detalles</a> 
                    
                </td>
                
            </tr>
        }
    </tbody>
</table>
