@model EgoPadel.Models.Equipo

@{
    ViewData["Title"] = "Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalle</h1>

<div>
    <h4>Equipo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FotoEscudo)
        </dt>
        <dd class = "col-sm-10">
            <img src="~/images/Equipos/@Html.DisplayFor(model => model.FotoEscudo)" width="50px"/>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Puntos)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Puntos)
        </dd>
    </dl>
</div>
<div>
    @if (ViewBag.Equipo == true || User.IsInRole(WC.AdminRol))
    {
        <form asp-controller="Puntos" asp-action="CambiarPuntosEquipo" method="post">
            <div class="form-group">
                <label asp-for="Puntos" class="control-label"></label>
                <input asp-for="Puntos" class="form-control" />
                <span asp-validation-for="Puntos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Id" class="form-control" value="@Model.Id" type="hidden" />
            </div>
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
            </div>
        </form>
        <a asp-action="Editar" asp-route-id="@Model?.Id">Editar</a>
        <a asp-action="Borrar" asp-route-id="@Model?.Id">Borrar</a>
    }
    
    <a asp-action="Index">Back to List</a>
</div>
