@model IEnumerable<EgoPadel.Models.ParticipantesEquipo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

</head>
<table class="table bg-light table-hover table-striped table-bordered " style="position: relative; left: 100px; top: 20px;">
    <thead class="text-center">
        <tr><th class="text-center" colspan="3" style="font-family: 'Bebas Neue', cursive; font-size: 40px;">Participantes Torneo Equipos</th></tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Torneo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Equipo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Torneo.Modalidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Equipo.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
