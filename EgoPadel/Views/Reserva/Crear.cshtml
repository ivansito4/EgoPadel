@model EgoPadel.Models.ViewModels.ReservaVM

@{
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <script type="text/javascript" src="https://code.jquery.com/jquery-1.7.2.min.js"></script>
    
</head>
<h1>Crear</h1>

<h4>ReservaPista</h4>
<hr />


<div class="row">
    <div class="col-md-4">
        <form asp-action="Crear">
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Reserva.PistaId" class="control-label">Pista</label>
                <select asp-for="Reserva.PistaId" class="form-select" asp-items="Model.PistaLista">
                    <option disabled selected>--Seleccione una Pista</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Reserva.UsuarioId" class="control-label">Usuario</label>
                <select asp-for="Reserva.UsuarioId" class="form-control" asp-items="Model.UsuarioLista">
                    <option disabled selected>--Seleccione un Usuario</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Reserva.FechaReserva" class="control-label">Fecha</label>
                <input asp-for="Reserva.FechaReserva" class="form-control" type="date" id="fechaReserva"/>
            </div>
            <script language="javascript">
                var today = new Date();
                var dd = String(today.getDate()).padStart(2, '0');
                var mm = String(today.getMonth() + 1).padStart(2, '0');
                var yyyy = today.getFullYear();

                today = yyyy + '-' + mm + '-' + dd;
                $('#fechaReserva').attr('min', today);
            </script>
            <div class="form-group">
                <label asp-for="Reserva.HoraInicio" class="control-label"></label>
                <select asp-for="Reserva.HoraInicio" class="form-control" id="selectHoras">
                    <option disabled selected>Seleccione la hora</option>
                    
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Reserva.Duracion" class="control-label"></label>
                <select asp-for="Reserva.Duracion" class="form-control">
                    <option disabled selected>¿Cuánto tiempo desea alquilar la pista?</option>
                    <option value="1">1 hora</option>
                    <option value="2">2 horas</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Reserva.Precio" class="control-label"></label>
                <input asp-for="Reserva.Precio" class="form-control" readonly/>
                <span asp-validation-for="Reserva.Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

<script>
    let fechas = @Html.Raw(Json.Serialize(ViewBag.Reservas))
        let listaFecha = JSON.parse(fechas);
    let horas = ["10:00", "11:00", "12:00", "13:00", "14:00", "15:00", "16:00", "17:00", "18:00", "19:00", "20:00"];
    let selectHoras=document.getElementById('selectHoras');

    function insertarOpciones() {
        for(i=0; i<listaFecha.length; i++){
            if(selectFecha.value==listaFecha[i].FechaReserva){
                let posicion=horas.findIndex(hora=>hora==listaFecha[i].HoraInicio);
                delete(horas[posicion]);
            }
        }
        
        horas.forEach(function(hora){
            let opcion=document.createElement("option");
            opcion.value=hora;
            opcion.innerHTML=hora;
            selectHoras.appendChild(opcion);
        })
        
    }

    let selectFecha = document.getElementById('fechaReserva');
    selectFecha.addEventListener("change", insertarOpciones);
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
