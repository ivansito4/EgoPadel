@model EgoPadel.Models.ViewModels.ReservaVM

@{
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link href="https://code.jquery.com/ui/1.12.1/themes/ui-lightness/jquery-ui.css"
          rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
            crossorigin="anonymous"></script>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"
            integrity="sha512-uto9mlQzrs59VwILcLiRYeLKPPbS/bT71da/OEBYEwcdNUk8jYIy+D176RYoop1Da+f9mvkYrmj5MCLZWEtQuA=="
            crossorigin="anonymous"
            referrerpolicy="no-referrer"></script>

    <script>

        $(document).ready(function () {
            $("#EnterDate").datepicker({
                minDate: new Date()

            });
        });
    </script>
</head>
<h1>Crear</h1>

<h4>ReservaPista</h4>
<hr />


<div class="row">
    <div class="col-md-4">
        <form asp-action="Crear">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Reserva.PistaId" class="control-label">Pista</label>
                <select asp-for="Reserva.PistaId" class="form-select" asp-items="Model.PistaLista">
                    <option disabled selected>--Seleccione una Pista</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Reserva.UsuarioId" class="control-label">Usuario</label>
                <select asp-for="Reserva.UsuarioId" class="form-control" asp-items="Model.UsuarioLista">
                    <option disabled selected>--Seleccione un Usuario</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Reserva.FechaReserva" class="control-label">Fecha</label>
                <input asp-for="Reserva.FechaReserva" class="form-control" type="date"/>
            </div>
            <div class="form-group">
                <label asp-for="Reserva.HoraInicio" class="control-label"></label>
                <select asp-for="Reserva.HoraInicio" class="form-control" id="EnterDate">
                    <option disabled selected>Seleccione la hora</option>
                    @foreach(string hora in ViewBag.horas)
                    {
                        <option value=@hora>@hora</option>
                    }

                </select>
            </div>
            <div class="form-group">
                <label asp-for="Reserva.Duracion" class="control-label"></label>
                <select asp-for="Reserva.Duracion" class="form-control">
                    <option disabled selected>¿Cuánto tiempo desea alquilar la pista?</option>
                    <option value="1">1 hora</option>
                    <option value="2">2 horas</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Reserva.Precio" class="control-label"></label>
                <input asp-for="Reserva.Precio" class="form-control" readonly/>
                <span asp-validation-for="Reserva.Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
