@model IEnumerable<EgoPadel.Models.UsuarioApp>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>

</head>
<h1>Clasificación Individual</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.Nombre)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]">@Html.DisplayNameFor(model => model.Puntos)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if (ViewBag.userId == item.Id)
            {
            <tr style="background-color:grey;">
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Puntos)
                </td>
                @if (User.IsInRole(WC.AdminRol))
                {
                    <td>
                        <a asp-action="Editar" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Borrar" asp-route-id="@item.Id">Borrar</a>
                    </td>
                }
            </tr>
            }else{
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellidos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Puntos)
                    </td>
                    @if (User.IsInRole(WC.AdminRol))
                    {
                        <td>
                            <a asp-action="Editar" asp-route-id="@item.Id">Editar</a> |
                            <a asp-action="Borrar" asp-route-id="@item.Id">Borrar</a>
                        </td>
                    }
                </tr>
            }
        }
    </tbody>
</table>

