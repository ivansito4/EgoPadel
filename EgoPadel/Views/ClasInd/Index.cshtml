@model IEnumerable<EgoPadel.Models.UsuarioApp>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" &amp;gt; />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fjalla+One&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
</head>
<div style="margin-left:50px">
    <p><a asp-controller="Home" asp-action="Index">Home</a> / <a asp-action="">Clasificación Individual</a></p>
</div>
@using (Html.BeginForm())
{
    <p style=" margin-left: 100px;">
        Buscar: @Html.TextBox("SearchString")
        <input type="submit" value="Search" class="btn-sm btn-success" />
    </p>
}
<table class="table bg-light table-hover table-striped table-bordered " style="position: relative; left: 100px;">
    <thead class="text-center">
        @if (User.IsInRole(WC.AdminRol))
        {
            <tr><th class="text-center" colspan="5" style="font-family: 'Bebas Neue', cursive; font-size: 40px;">Clasificación Individual</th></tr>
        }
        else
        {
            <tr><th class="text-center" colspan="4" style="font-family: 'Bebas Neue', cursive; font-size: 40px;">Clasifica</th></tr>
        }
        
        
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Puntos)
            </th>
        </tr>
    </thead>
    <tbody class ="text-center">
        @foreach (var item in Model)
        {
            @if (ViewBag.userId == item.Id)
            {
                <tr class="bg-warning text-light">
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Puntos)
                </td>
                @if (User.IsInRole(WC.AdminRol))
                {
                        <td>
                            <a asp-controller="Puntos" asp-action="Detalle" asp-route-nombreUsuario="@item.UserName" class="w-50 btn btn-lg btn-success form-control">Detalles</a>
                        </td>
                    <td>
                        <a asp-action="Borrar" asp-route-id="@item.Id">Borrar</a>
                    </td>
                }
            </tr>
            }else{
                <tr>
                    <td >
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellidos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Puntos)
                    </td>
                    @if (User.IsInRole(WC.AdminRol))
                    {
                        <td>
                            <a asp-controller="Puntos" asp-action="Detalle" asp-route-nombreUsuario="@item.UserName" class="w-50 btn btn-lg btn-success form-control">Detalles</a>
                        </td>
                        <td>
                            <a asp-action="Editar" asp-route-id="@item.Id">Editar</a> |
                            <a asp-action="Borrar" asp-route-id="@item.Id">Borrar</a>
                        </td>
                    }
                </tr>
            }
        }
    </tbody>
</table>

