@model EgoPadel.Models.ViewModels.DetalleTorneoVM

@{
    ViewData["Title"] = "Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post">

    <div class="container backgroundWhite pt-4" >
        <div class="card-detalle" style="border:1px solid #000000; ">
            <div class="card-header bg-dark text-light ml-0 row container" style="border-radius: 0px;">
                <div class=" col-12 col-md-6 p-2">
                    <h1 class="text-white">@Model.Torneo.Tipo @Model.Torneo.Modalidad</h1>
                </div>
                <div class="col-12 col-md-6 text-md-end p-2">
                    <h1 class="text-warning"> 0/@(Model.Torneo.NroPlazas)</h1>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-4 p-1 text-center">
                            <img src="~/images/torneo.jpg" width="100%" class="rounded" />
                        </div>
                        <div class="col-12 col-lg-8">
                            <div class="row pl-3">

                                <div class="col-12">
                                    <span class="badge p-4 border text-dark" style="background-color:lavenderblush; font-size:20px;">@Model.Torneo.Fecha</span>
                                    <span class="badge p-4  border text-dark" style="background-color:azure; font-size:20px;">Premio:@Model.Torneo.Premio</span>
                                    <h3 class="text-success"></h3>

                                    <p class="text-secondary">@Html.Raw(Model.Torneo.Descripcion)</p>
                                    <div class="row p-5" style="position:absolute;bottom:0; align-content:center;">
                                        <div class="col-12 ">
                                            <a asp-action="Index" class="btn btn-success btn-square form-control btn-lg" style="height:50px; width:150px;">Regresar</a>
                                        
                                            @if (Model.UsuarioRegistrado)
                                            {
                                                <a asp-action="Desapuntar" asp-route-Id="@Model.Torneo.Id" class="btn btn-warning btn-square form-control btn-lg" style="height:50px;width:150px;">Desapuntarme</a>
                                            }
                                            else
                                            {
                                                <button type="submit" class="btn btn-info form-control btn-lg" style="height:50px;width:150px;">Apuntarme</button>
                                            }
                                            @if (User.IsInRole(WC.AdminRol))
                                            {
                                                <br />

                                                <br />
                                                <p style="color:black;">Administración:</p>
                                                <a asp-action="Editar" asp-route-Id="@Model.Torneo.Id" class="btn btn-warning btn-square form-control btn-lg" style="height:50px;width:150px;">Editar</a>
                                                <a asp-action="Borrar" asp-route-Id="@Model.Torneo.Id" class="btn btn-danger btn-square form-control btn-lg" style="height:50px;width:150px;">Eliminar</a>
                                            }


                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
                
        </div>
    </div>
</form>
