@model EgoPadel.Models.UsuarioApp

@{
    ViewData["Title"] = "Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalle</h1>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Apellidos)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apellidos)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Puntos)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Puntos)
        </dd>
    </dl>
</div>
<div>
    <form asp-action="CambiarPuntosIndividual" method="post">
        <div class="form-group">
            <label asp-for="Puntos" class="control-label"></label>
            <input asp-for="Puntos" class="form-control" />
            <span asp-validation-for="Puntos" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Id" class="form-control" value="@Model.Id" type="hidden"/>
        </div>
        <div class="form-group">
            <input type="submit" value="Actualizar" class="btn btn-primary" />
        </div>
    </form>
    <a asp-action="Index">Back to List</a>
</div>
