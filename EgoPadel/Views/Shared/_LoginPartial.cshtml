@using Microsoft.AspNetCore.Identity;

@*@model EgoPadel.Models._LoginPartialController*@

@inject SignInManager<UsuarioApp> SignInManager
@inject UserManager<UsuarioApp> UserManager

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
       
            
    

        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Bienvenido <b>@UserManager.GetUserName(User)</b></a>
            <ul class="dropdown-menu" >
                <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Mi Perfil</a></li>
                
                    <li><a class="dropdown-item" asp-controller="Equipo" asp-action="Crear">Crear Equipo</a></li>
                    <li><a class="dropdown-item" asp-controller="Equipo" asp-action="Buscar">Buscar Equipo</a></li>
                
                
                <li class="dropdown-item">
                    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button id="logout" type="submit" class=" btn btn-link text-danger">Cerrar sesión</button>
                    </form>
                </li>
            </ul>
       
    </li>
}
else
{
        <li>
            <a class="nav-link text-white" id="register" asp-area="Identity" asp-page="/Account/Register">Registrarse</a>
        </li>
        <li>
            <a class="nav-link text-white" id="login" asp-area="Identity" asp-page="/Account/Login">Iniciar sesión</a>
        </li>
}
</ul>

