@model IEnumerable<EgoPadel.Models.ParticipantesIndividual>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table bg-light table-hover table-striped table-bordered " style="position: relative; left: 100px; top: 20px;">
    <thead class="text-center">
        <tr><th class="text-center" colspan="3" style="font-family: 'Bebas Neue', cursive; font-size: 40px;">Participantes Torneo Equipos</th></tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Torneo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioApp.UserName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="text-center">
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.Torneo.Tipo)  @Html.DisplayFor(modelItem => item.Torneo.Modalidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsuarioApp.UserName)
            </td>
            <td>
                <a asp-action="Borrar" asp-route-id="@item.Id">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
